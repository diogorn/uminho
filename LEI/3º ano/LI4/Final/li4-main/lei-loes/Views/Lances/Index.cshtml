@model IEnumerable<lei_loes.Models.LanceModel>

@{
    ViewData["Title"] = "Gestão lance";
}

<h1>Gestão Lances</h1>

<p>
    <a asp-action="Create">Adicionar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LanceID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LanceID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LanceID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
