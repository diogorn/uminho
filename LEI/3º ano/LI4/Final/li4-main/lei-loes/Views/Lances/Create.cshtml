@using lei_loes.Data
@using Microsoft.AspNetCore.Identity
@model lei_loes.Models.LanceModel
@inject UserManager<User> UserManager

@{
    ViewData["Title"] = "Create";
}

@{
    var user = await UserManager.GetUserAsync(User);
}

<h1>Create - User ID: @user?.Id</h1>

<h4>LanceModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente_ClienteID" class="control-label"></label>
                <input asp-for="Cliente_ClienteID" class="form-control" value=@user?.Id readonly/>
                <span asp-validation-for="Cliente_ClienteID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Leilao_LeilaoID" class="control-label"></label>
                <select asp-for="Leilao_LeilaoID" class ="form-control" asp-items="ViewBag.Leilao_LeilaoID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}