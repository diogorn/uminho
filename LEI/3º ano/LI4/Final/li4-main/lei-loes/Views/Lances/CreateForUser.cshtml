@using lei_loes.Data
@using Microsoft.AspNetCore.Identity
@model lei_loes.Models.LanceModel
@inject UserManager<User> UserManager

@{
    ViewData["Title"] = "CreateForUser";
}

@{
    var user = await UserManager.GetUserAsync(User);
}

<h1>Lance - User ID: @user?.Nome</h1>

<h4>Lance</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateForUser">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Leilao_LeilaoID" type="hidden" value="@ViewBag.Leilao_LeilaoID" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    @Html.ActionLink("Voltar a trás", "Detalhes", "Leiloes", new { id = ViewBag.Leilao_LeilaoID }, null)
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}